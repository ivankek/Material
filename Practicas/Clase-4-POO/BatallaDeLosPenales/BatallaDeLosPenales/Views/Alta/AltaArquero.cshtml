<h1>Agregar un arquero:</h1>

<form action="/Alta/AltaArquero" method="post">


    <div>
        Nombre:
        <input type="text" name="Nombre" />
    </div>

    <div>
        Apellido:
        <input type="text" name="Apellido" />
    </div>

    <div>
        Expulsado:

        <label>
            Si
            <input type="checkbox" name="Expulsado" value="True" />
        </label>
        <label>
            No
            <input type="checkbox" name="Expulsado" value="False" />
        </label>

    </div>

    <div>

        <input type="number" name="PenalesAtajados" />

    </div>

    <div>
        <input type="submit" value="Crear Arquero" />

    </div>

</form>